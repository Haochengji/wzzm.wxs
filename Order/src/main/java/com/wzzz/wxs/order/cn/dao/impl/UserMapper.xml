<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzzz.wxs.order.cn.dao.UserDao">
    <select id="allUser" resultType="pojo.User" parameterType="pojo.User">
        select uid,uname,upwd,uphone,utype,u1,u2,u3 from user
        <trim prefix="where" prefixOverrides="and|or">
            <if test="uid != null">
                and uid=#{uid}
            </if>
            <if test="uname != null">
                and uname=#{uname}
            </if>
            <if test="upwd != null">
                and upwd=#{upwd}
            </if>
            <if test="uphone != null">
                and uphone=#{uphone}
            </if>
            <if test="utype != null">
                and utype=#{utype}
            </if>
            <if test="u1 !=null">
                and u1=#{u1}
            </if>
            <if test="u2 != null">
                and u2=#{u2}
            </if>
            <if test="u3 != null">
                and u3=#{u3}
            </if>
        </trim>
    </select>
    <insert id="addUser" parameterType="pojo.User">
        insert into user values (0,#{uname},#{upwd},#{uphone},#{utype},#{u1},#{u2},#{u3})
    </insert>
    <update id="updateUser" parameterType="pojo.User">
        update user
        <trim prefix="set" suffixOverrides="," suffix="wher uid=#{uid}">
            <if test="uname != null">
                uname=#{uname} ,
            </if>
            <if test="upwd != null">
                upwd=#{upwd} ,
            </if>
            <if test="uphone != null">
                uphone=#{uphone} ,
            </if>
            <if test="utype != null">
                utype=#{utype} ,
            </if>
            <if test="u1 != null">
                u1=#{u1} ,
            </if>
            <if test="u2 != null">
                u2=#{u2} ,
            </if>
            <if test="uname != null">
                u3=#{u3} ,
            </if>
        </trim>
    </update>
</mapper>